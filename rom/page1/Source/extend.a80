WR_RD_SEC_M	PUSH IX
		LD (TEMP_SP),SP
		LD HL,(DOS_STEK)
		LD DE,SAVED_RAM
		LD BC,0X10
		LDIR
		LD SP,HL
		IN A,(RW_PORT1)			;  
		ADD A,A				; 2
		LD D,A
		LD A,(WR_FF)
		AND 0X10			;   
		JR NZ,WRRDSECM1
		INC D				;  1
WRRDSECM1	IN A,(RW_PORT2)			;  
		LD E,A				;D-, E-
		LD HL,(REG_L)			;HL= /
		LD A,(WR_FF)
		AND 3
		LD C,A				; 
		LD A,IXL
		AND A				;BIT 7=0-
		JR Z,WRRDSECM2
		LD A,0X80			;BIT 7=1-
WRRDSECM2	OR C
		LD IXL,A			;A= + /
		LD A,(TEK_ROMPAGE)
		AND 0X3E
		LD IXH,A
		LD BC,WIN_A0
		OUT (C),A
		LD A,IXL
		RST 8
		DB _MOUNTER
		DB _RDWR_MOUNT
		LD BC,WIN_A0
		LD A,IXH
		OUT (C),A
		LD B,HIGH (WIN_P0)
		LD A,PAGE_EVODOS
		OUT (C),A
		LD (REG_L),HL			;  /
		LD HL,SAVED_RAM
		LD DE,(DOS_STEK)
		LD BC,0X10
		LDIR
		LD SP,(TEMP_SP)
		POP IX
		RET

