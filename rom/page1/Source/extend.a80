PRT_VERS	LD HL,0X3FF8
		LD B,6
		CALL PRT_B_HL_
		LD A," "
		RST 0X10
		LD C,(HL)
		INC HL
		LD B,(HL)
		PUSH BC
		LD HL,ZASTAVKA_VER
		LD B,9
		CALL PRT_B_HL_
		LD A," "
		RST 0X10
		POP BC
		LD A,C
		AND 0X1F			; 5 - 
		CALL A2TXT			;   
		SRL B
		RR C				;    
		LD A,"."
		RST 0X10
		LD A,C				;  
		RRCA
		RRCA
		RRCA
		RRCA				;   
		AND 0X0F			;   4  
		CALL A2TXT			;   
		LD A,"."
		RST 0X10
		LD A,"2"
		RST 0X10
		LD A,"0"
		RST 0X10
		LD A,B				;  
		AND 0X3F			;  6 
		CALL A2TXT			;   
		BIT 6,B				;  6 (  7) 
		LD HL,TXT_BETA
		RST 0X18
		LD A,0X0D
		RST 0X10
		RET

; B=   HL=   
