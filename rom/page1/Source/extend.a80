END_EXT_COM	INC DE
		LD A,(DE)
		CP ":"
		DEC DE
		JP NZ,SINTAX_ERROR
		LD A,(DE)
		AND 0DFH
		SUB "A"
		JP C,SINTAX_ERROR
		CP 4
		JR NC,SELFATDRV
		LD (TRD_5CF6),A			;    
		LD (TRD_5D19),A			;   
		LD B,A
		LD A,(TRD_5D16)			; 	  ( #FF)
		AND 7CH
		OR B
		LD (TRD_5D16),A			; 	  ( #FF)
		RST 0X30
		DB WOUTFF
		JP ERR_OK

