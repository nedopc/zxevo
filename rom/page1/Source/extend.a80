EMU_LDIR	PUSH AF
		LD A,H
		CP 0X2A
		JR NZ,EMU_LDIR2
		LD A,L
		CP 0X54
		JR NC,EMU_LDIR2
		CP 0X50
		JR C,EMU_LDIR2
		ADD HL,BC
		PUSH HL
		LD HL,0X3FF0-3
		CP 0X53
		JR NZ,EMU_LDIR0
		LD HL,0X3FF0
EMU_LDIR0	LDIR
		POP HL
		POP AF
		RET

EMU_LDIR2	PUSH BC
		PUSH HL
		LD A,(LOC_2A53)
		CP BCMP_EMU
		LD HL,DOS_NOEMUL
		LD BC,WIN_A0+0X100
		CALL NZ,WRPORT_RET
		POP HL
		POP BC
		LDIR
EMU_LDIR4	CP BCMP_EMU
		JR Z,EMU_LDIR3
		PUSH HL
		PUSH BC
		LD HL,DOS_EMUL
		LD BC,WIN_A0+0X100
		CALL WRPORT_RET
		POP BC
		POP HL
EMU_LDIR3	POP AF
		RET

EMU_LDIR_RBC	CALL EMU_LDIR
		POP BC
		RET

EMU_LDIR_RHL	CALL EMU_LDIR
		POP HL
		RET

