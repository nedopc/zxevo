RST08_WORK	EX (SP),HL
		PUSH AF
		PUSH BC
		LD A,I
	        JP PE,RST08_WORK1
		LD A,I
RST08_WORK1	DI
		PUSH AF
		LD BC,RD_1WINA0
		IN A,(C)
		PUSH AF
		AND 0X3E
		LD BC,WIN_A0
		OUT (C),A
		LD B,HIGH (WIN_P0)
		LD A,PAGE_EVODOS
		OUT (C),A
		IN A,(PEVO_CONF)
		LD (WR_BF),A
		OR 1
		OUT (PEVO_CONF),A
		POP AF
		LD (TEK_ROMPAGE),A
		LD A,(HL)
		LD (DOS_STEK),SP
		LD SP,DOS_STEK
		PUSH HL				; HL= 
		PUSH DE
		LD HL,(DOS_STEK)
		LD DE,REG_IF
		REPT 8
		LDI
		ENDM
		LD HL,EXIT_RST08
		PUSH HL				;  
		LD HL,W_DATA
		ADD A,A
		ADD A,L		
		LD L,A
		LD A,(HL)
		INC L
		LD H,(HL)
		LD L,A
		JP (HL)

EXIT_RST08	LD HL,REG_IF
		LD DE,(DOS_STEK)
		REPT 8
		LDI
		ENDM
		POP DE
		POP HL
		LD SP,(DOS_STEK)
		LD A,(HL)
		INC HL
		CP LOW ((EW_DATA-W_DATA)/2)
		JR C,EXIT_RST082
		LD HL,FOR_RET
EXIT_RST082	PUSH HL
		IN A,(RW_PORT0)
		LD H,A
		AND 3
		LD L,A
		LD A,(MASK_DRV)
		LD B,A
		LD A,H
		AND B
		CP B
		JR Z,EXIT_RST085
		LD A,(WR_FF)
		AND 3
		CP L
EXIT_RST085	LD A,(WR_BF)
		LD BC,WIN_A0+0X100
		LD HL,DOS_NOEMUL
		JR NZ,EXIT_RST083
		INC HL
EXIT_RST083	CALL WRPORT_RET
		POP HL
		OUT (PEVO_CONF),A
		POP AF
		JP PO,EXIT_RST084
		EI
EXIT_RST084	LD I,A
		POP BC
		POP AF
		EX (SP),HL
		RET

