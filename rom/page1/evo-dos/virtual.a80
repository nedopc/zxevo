DOS_EMUL	DB P_ADD_BAS48|0X80		; DOS    

READ_BYTE_HL_	PUSH BC
		PUSH HL
		LD A,(LOC_2A53_)
		CP 0X0C
		LD BC,WIN_A0+0X100
		LD HL,DOS_NOEMUL
		CALL NZ,WRPORT_RET
		LD C,A
		EX (SP),HL
		LD A,(HL)
		EX (SP),HL
		PUSH AF
		LD A,C
		CP 0X0C
		JR Z,RBHL1
		LD BC,WIN_A0+0X100
		LD HL,DOS_EMUL
		CALL WRPORT_RET
RBHL1		POP AF
		POP HL
		POP BC
		RET
