;D-X E-Y -> DE=ATTR ADR HL=DISP ADR
TDISP_ATTR	LD H,E
		LD L,0
		LD E,D
		LD A,D
		LD D,L
		SRL H
		RR L
		SRL H
		RR L
		SRL E
		ADD HL,DE
		AND 1
		REPT 4
		RRCA
		ENDM
		ADD A,HIGH (CPU3+LSYM)
		LD D,A
		LD E,LOW (CPU3+LSYM)
		ADD HL,DE			;HL=    
		LD E,H
		LD A,H
		XOR 0X30
		LD D,A
		LD A,E
		AND 0X10
		REPT 4
		RRCA
		ENDM
		ADD A,L
		LD E,A
		RET

