		JR NZ,TCOD16
		EXX
		OUT (C),L
		EXX
		LD A,(TXNEW)
		LD (TADRSTR_X),A
		LD D,A
		LD A,(TADRSTR_Y)
		INC A
		LD (TADRSTR_Y),A
		LD E,A
		JP TNEXT

