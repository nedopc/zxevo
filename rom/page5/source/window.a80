TPRINT		CP 0X20
		JP NC,TPRINTA
		CP 3
		JR Z,TNEXT
		CP 9
		JR NZ,TCOD0D
		LD B,(HL)
		INC HL
		EXX
		OUT (C),L
		EXX
		LD A,(TADRSTR_X)
		ADD A,B
		LD (TADRSTR_X),A
		JP TNEXT

