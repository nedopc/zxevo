TCOD2		CP 2
		JP NZ,TNEXT
		LD DE,(TEK_TEXT)
		LD A,D
		OR E
		JR NZ,TCOD2_1
		LD E,(HL)
		INC HL
		LD D,(HL)
		INC HL
		LD (TEK_TEXT),HL
		EX DE,HL
		JP TNEXT

TCOD2_1		LD HL,(TEK_TEXT)
