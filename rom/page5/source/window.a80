		JR Z,RASCH
		LD IY,BUFTSC
		LD L,(IX+1)
		LD H,0
		ADD HL,HL
		ADD HL,HL
		ADD HL,HL
		ADD HL,HL
		EX DE,HL
		ADD IY,DE
		LD L,(IY+0)
		LD A,(IY+1)
		LD D,A
		RRCA
		RRCA
