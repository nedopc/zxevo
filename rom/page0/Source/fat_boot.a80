END_LOAD_TAP	XOR A
		CALL SET4MBPAGE
		LD H,A
		LD L,A
		LD (0X4000),HL
		LD (0X4002),A
		LD A,0XFA
		CALL SET4MBPAGE
		LD SP,(LD_FILE_SP)
		POP IY
		POP IX
		LD H,CMOS_BYTE_00
		CALL READCMOS
		OR EMUL_TAPE
		LD L,A
		CALL WRITECMOS
		JP TAPELOAD1

