		SCF
		RET NZ
		PUSH DE				;     
		LD BC,BUF_RDSEC			;   
		CALL HOB_CRC			; CRC HOBETA 
		LD A,(BC)
		INC BC
		LD E,A
		LD A,(BC)
		LD D,A				; "DE"  CRC  
		AND A				; "HL"    +0X0F   
		SBC HL,DE			; 
		POP DE				;       
		SCF
		RET NZ				; 
		EXX
		LD HL,(BUF_RDSEC+9)
		DEC HL				;   40960  (160 )
		LD DE,(BUF_RDSEC+0X0B)
		ADD HL,DE			;    
		EXX				;    
		RET C				; 
		EXX
		LD HL,(BUF_RDSEC+9)
		LD DE,0X6000			;  
		AND A				;      0X6000
		SBC HL,DE
		EXX				;    0X6000
		RET

