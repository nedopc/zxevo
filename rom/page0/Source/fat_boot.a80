		LD HL,0X5000
		LD A,0X18
		RST 8
		DB _COM_FAT
		DB _READ_FILE
		PUSH AF				;       
		LD HL,0X4000
		PUSH HL				;   
		LD (HL),L
		LD D,H
		LD E,L
		INC DE
		LD BC,0XFFF
		LDIR				;       
		LD HL,0X5008			;    SCL 
		LD A,(HL)			;    
		INC HL				;    
		EXX
		LD HL,0				;  
		LD D,L				;      255 
		LD B,A				;  
		EXX
		POP DE				;    
LOAD_IMAGE3	EX AF,AF'
		LD BC,0X0D
		LDIR				; 13   
		LD A,(HL)			;    
		LDI				;  
		EXX
		LD E,A
		PUSH HL				;    
		ADD HL,DE			;       
		EXX
		EX (SP),HL
		LD A,L
		ADD HL,HL
		ADD HL,HL
		ADD HL,HL
		ADD HL,HL
		INC H
		AND 0X0F
		LD L,A
		EX (SP),HL
		POP BC				;   
		EX DE,HL
