;,    
GO_RUN_HOB	RST 8
		DB _COM_FAT
		DB _OPEN_FILE
		LD DE,8
		ADD HL,DE
		PUSH HL
		LD HL,(BUF_FILEITEM+8)
		LD DE,"RT"
		AND A
		SBC HL,DE
		POP HL
		JR Z,SELMOUNT
		LD A,(HL)
		CP "$"
		JR Z,GORUNHOB1			;   HOBETA
		CP "S"
		JP NZ,LOAD_IMAGE		;   
		INC HL
		LD A,(HL)
		CP "P"
		DEC HL
		LD A,(HL)
		JP NZ,LOAD_IMAGE		;   
GORUNHOB1	RST 8
		DB _COM_DEV
		DB _KOL_VOL			;      
		LD A,D				;   
		LD HL,ADR_CAT
		RST 8
		DB _COM_DEV
		DB _GET_FNDVOLUME
		ADD A,A
		ADD A,A
		ADD A,A
		LD C,A
		LD B,0
		ADD HL,BC
		LD A,(HL)			;  
		SUB 4				; 
		LD D,A				;  
		INC HL
		LD E,(HL)			;   (MASTER/SLAVE)
		PUSH DE
		LD HL,0X5800
		LD DE,0X5801
		LD BC,0X02FF
		LD (HL),L
		LDIR				;    
		LD HL,RUN_CODE
		LD DE,0X5D3B
		LD BC,ERUN_CODE-RUN_CODE
		LDIR
		CALL MEMSET			;  
		CALL FOR_RUN
		LD HL,0X4200			;   FAT   
		RST 8
		DB _INST_FATBOOT
		POP DE
		LD (0X42FE),DE
		JP 0X4300

