;     HOBETA   /  
RUN_HOB		DI
		CALL SHUT2AY			;  AY
		LD L,(IX+8)
		LD H,(IX+9)			;HL=  
RUN_HOB1	LD DE,ADR_CAT
		ADD HL,HL
		ADD HL,DE			;   
		LD C,(HL)
		INC HL
		LD B,(HL)			;   
		LD A,6
		RST 8
		DB _COM_FAT
		DB _POS_FILES			;   FAT 
		LD HL,BUF_FILEITEM
		RST 8
		DB _COM_FAT
		DB _READ_DIR			;    
		LD DE,0X0B			;   
		ADD HL,DE			;    
		LD A,(HL)			;     
		SBC HL,DE
		AND 0X10			;
		JP Z,GO_RUN_HOB			;  ,    
		RST 8
		DB _COM_FAT
		DB _ENTER_DIR			;   
		PUSH HL				;      
		LD HL,BUF_RDPATH
		RST 8
		DB _COM_FAT
		DB _GET_PATH			;       
		LD A,(HL)			;    
		SUB "E"				;   
		LD D,A
		LD E,0
		LD HL,BUF_LEVDIR
		SRL D
		RR E
		SRL D
		RR E
		ADD HL,DE
		EX (SP),HL			;   FAT ,    
		LD A,(HL)			;      
		POP HL				;   FAT  
		CP "."				;     ".",        
		JR NZ,SNYT0			;  
		LD C,(HL)			;       
		INC HL
		LD B,(HL)
		INC HL
		PUSH HL
		ADD HL,BC
		DEC HL
		LD A,(HL)
		DEC HL
		LD C,(HL)
		DEC HL
		LD B,(HL)
		POP DE
		AND A
		SBC HL,DE
		EX DE,HL
		DEC HL
		LD (HL),D
		DEC HL
		LD (HL),E
		LD (IX+8),C
		LD (IX+9),B
		LD (IX+7),A
		CALL SEARCH_FILE		;       
		LD (IX+0X0A),C
		LD (IX+0X0B),B			;        
		JP REOUT_HOB			;   

;       
SNYT0		LD C,(HL)
		INC HL
		LD B,(HL)			;BC=    
		INC HL
		PUSH HL				;HL=   
		ADD HL,BC			;HL=   
		LD D,(IX+9)
		LD E,(IX+8)
		LD A,(IX+7)
		LD (HL),D
		INC HL
		LD (HL),E
		INC HL
		LD (HL),A
		INC HL
		POP DE				;DE=   
		AND A
		SBC HL,DE
		EX DE,HL
		DEC HL
		LD (HL),D
		DEC HL
		LD (HL),E
		LD C,(IX+0X0A)
		LD B,(IX+0X0B)
		CALL SEARCH_FILE
		JP OUT_HOB

