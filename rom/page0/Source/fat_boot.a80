;    FDI
LOAD1SECFDI	PUSH HL
		PUSH BC
		PUSH DE
		PUSH AF
		LD HL,0XC000
		LD A,1
		RST 8
		DB _COM_FAT
		DB _READ_FILE
		INC IXH
		POP AF
		POP DE
		POP BC
		POP HL
		RES 1,H
		RET

;  1    
SET4MBPAGE	PUSH BC
		LD B,A
		PEC_ON SHADOW_BF
		LD A,B
		LD BC,WIN_P1
		OUT (C),A
		LD B,A
		PEC_OFF SHADOW_BF
		LD A,B
		POP BC
		RET

LOADIMAGE4	PUSH IX
